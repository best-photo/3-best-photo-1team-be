model Exchange {
  id           String  @id @default(cuid())
  requesterId  String  /// 교환 요청자의 id(요청자[User]와 교환[Exchange]은 1:N 관계)
  offeredCardId String /// 교환 요청자가 제시한 카드의 id(제시한 카드[Card]와 교환[Exchange]은 1:N 관계)
  targetCardId  String /// 교환 대상자가 제시한 카드의 id(제시한 카드[Card]와 교환[Exchange]은 1:N 관계)

  requester  User @relation(fields: [requesterId], references: [id])
  offeredCard Card @relation("OfferedCard", fields: [offeredCardId], references: [id])
  targetCard  Card @relation("TargetCard", fields: [targetCardId], references: [id])

  createdAt       DateTime         @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime         @updatedAt @db.Timestamptz(6)

  @@map("exchanges")
}
