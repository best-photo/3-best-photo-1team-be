model Card {
  id                String     @id @default(cuid())
  /// 카드 소유자(User과 Card는 1:N 관계)
  ownerId           String
  /// 카드 이름 길이 제한(100자)
  name              String     @db.VarChar(100)
  /// 카드에 부여되어 있는 포인트 가격
  price             Int
  /// 카드 이미지 URL
  imageUrl          String
  /// 카드 등급(common, rare, super rare, legendary)
  grade             CardGrade
  /// 카드 장르(예: 여행, 풍경, 인물, 사물 등)
  genre             CardGenre
  /// 카드 설명(없을 수도 있음)
  description       String?
  /// 카드의 총 수량
  totalQuantity     Int
  /// 카드의 남은 수량
  remainingQuantity Int
  createdAt         DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt         DateTime   @updatedAt @db.Timestamptz(6)
  owner             User       @relation(fields: [ownerId], references: [id])
  offeredExchanges  Exchange[] @relation("OfferedCard")
  targetExchanges   Exchange[] @relation("TargetCard")
  purchases         Purchase[]
  shop              Shop?

  @@map("cards")
}

/// 카드등급
enum CardGrade {
  /// 일반
  COMMON     @map("common")
  /// 희귀
  RARE       @map("rare")
  /// 초희귀
  SUPER_RARE @map("super_rare")
  /// 전설
  LEGENDARY  @map("legendary")
}

/// 카드장르
enum CardGenre {
  /// 여행
  TRAVEL    @map("travel")
  /// 풍경
  LANDSCAPE @map("landscape")
  /// 인물
  PORTRAIT  @map("portrait")
  /// 사물
  OBJECT    @map("object")
}
